<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_latar_kos"
                android:src="@drawable/ic_gambar_kos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nama_kos"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="D'Campus -2km"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_baseline_bookmark_24"
                app:tint="@color/colorPrimary_400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daerah_kos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cangkorawok"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/kisaran_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500.000 - 1.500.000"
                android:textColor="@color/colorPrimary_400"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_ac" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_wifi" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_dapur" />
        </LinearLayout>

        <TextView
            android:id="@+id/alamat_kos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jln. Yang Lurus Nomor 12, samping pos satpam"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_marginStart="10dp"
                android:layout_width="147dp"
                android:layout_height="@dimen/_50sdp"
                android:text="Edit"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_marginStart="50dp"
                android:layout_width="147dp"
                android:layout_height="@dimen/_50sdp"
                android:text="Delete"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"/>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>